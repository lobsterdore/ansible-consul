description "Consul"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

script
  if [ -f "/etc/default/consul" ]; then
    . /etc/default/consul
  fi

  # Make sure to use all our CPUs, because Consul can block a scheduler thread
  export GOMAXPROCS=`nproc`

  BIND=$( ifconfig $BIND_INTERFACE \
    | grep "inet addr" \
    | awk '{ print substr($2,6) }' )
  CLIENT=$( ifconfig $CLIENT_INTERFACE \
    | grep "inet addr" \
    | awk '{ print substr($2,6) }' )

  exec /usr/bin/consul agent \
    -config-dir="{{ consul_directories_config_dir }}" \
    -bind=$BIND \
    -client=$CLIENT \
    ${JOIN_STR} \
    ${CONSUL_STARTOPS} \
    >> {{ consul_directories_log_dir }}/consul.log 2>&1
end script
